<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Homepage</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <div class="container mt-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 gap-0.5
    ">
      <% blogs.forEach(blog => { %>
        <div class="col">
      <div class="card mt-2" style="width: 16rem; height: 16rem; ">
        <img src="<%=blog.coverImageURL%>" style="height: 70%;" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
